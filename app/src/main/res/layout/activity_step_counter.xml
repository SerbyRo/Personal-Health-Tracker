<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepCounterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarStepCounter"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Step Counter"/>

    <TextView
        android:id="@+id/stepCounterTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Step Counter Data"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/toolbarStepCounter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/transferStepCountButton"
        android:gravity="center"
        android:padding="16dp" />

    <Button
        android:id="@+id/transferStepCountButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>